<h1><%= @topic.name %></h1>

<div class="row">
    <div class="col-md-8">
        <p class="lead"><%= @topic.description %></p>
        
        <h4 class="post-header">
            <%= @topic.posts.count.to_s + " " + 'Post'.pluralize(@topic.posts.count) %>
            <%= link_to "Create New Post", new_topic_post_path(@topic), class: 'btn btn-info header-button'%>
            </h4>
        <% @topic.posts.each do |post| %>
            <div class="media">
                <div class="media-body">
                    <h4 class="media-heading">
                        <%= link_to post.title, topic_post_path(@topic, post) %>
                    </h4>
                    <small>
                        submitted <%= time_ago_in_words(post.created_at) %> ago <br>
                        <%= post.comments.count %> comments
                    </small>
                </div>
            </div>
        <% end %>
        <h4 class="post-header">
            <%= @topic.sponsored_posts.count %> Sponsored <%= 'Post'.pluralize(@topic.sponsored_posts.count)%>
            <%= link_to "Create New Sponsored Post", new_topic_sponsored_post_path(@topic), class: 'btn btn-info header-button'%>
        </h4>
        <% @topic.sponsored_posts.each do |post| %>
            <div class="media">
                <div class="media-body">
                    <h4 class="media-heading">
                        <%= link_to post.title, topic_sponsored_post_path(@topic, post) %>
                    </h4>
                    <small>
                        submitted <%= time_ago_in_words(post.created_at) %> ago <br>
                    </small>
                </div>
            </div>
        <% end %>
        
    </div>
    <div class="col-md-4">
        <%= link_to "New Post", new_topic_post_path(@topic), class: 'btn btn-info' %>
        <%= link_to "New Sponsored Post", new_topic_sponsored_post_path(@topic), class: 'btn btn-warning' %>
    </div>
    <br>
    <div class="col-md-4">
        <%= link_to "Edit Topic", edit_topic_path, class: 'btn btn-success' %>
        <%= link_to "Delete Topic", @topic, method: :delete, class: 'btn btn-danger', data: { confirm: "Are you sure you want to delete this topic?"} %>
    </div>
</div>