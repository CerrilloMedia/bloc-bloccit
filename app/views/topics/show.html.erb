<h1><%= @topic.name %>
<% if user_is_authorized_for_topics? %>
    <div class="button-group edit-delete-topic">
        <%= link_to "", edit_topic_path, class: "glyphicon glyphicon-edit glyphicon-topic", title: "edit topic" %>
        <% if current_user.admin? %>
            <%= link_to "", @topic, method: :delete, class: "glyphicon glyphicon-trash glyphicon-topic", title: "delete topic", data: { confirm: "Are you sure you want to delete this topic?"} %>
        <% end %>
    </div>
<% end %>
</h1>
<div class="row">
    <div class="col-md-8">
        <p class="lead"><%= @topic.description %></p>
        
        <%= render @topic.posts %>
    </div>
    <div class="col-md-4">
        <% if current_user %>
            <div class="button-group">
                <%= link_to "New Post", new_topic_post_path(@topic), class: 'btn btn-success' %><br>
            </div>
        <% end %>
        <% if user_is_authorized_for_topics? %>
            <div class="button-group">
                <%= link_to "Edit Topic", edit_topic_path, class: 'btn btn-success' %>
                <% if current_user.admin? %>
                    <%= link_to "Delete Topic", @topic, method: :delete, class: 'btn btn-danger', data: { confirm: "Are you sure you want to delete this topic?"} %>
                <% end %>
            </div>
        <% end %>
    </div>
</div>